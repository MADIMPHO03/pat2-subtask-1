Add your C++ source code here.
#include <iostream>
#include <string>
#include <cctype> // For isalpha and toupper

using namespace std;

// Dot and dash characters
const char DOT = 46;   // '.'
const char DASH = 45;  // '-'

// Morse code for A–Z (uppercase only)
string morse[26] = {
    ".-", "-...", "-.-.", "-..", ".", "..-.", "--.", "....", "..",  // A–I
    ".---", "-.-", ".-..", "--", "-.", "---", ".--.", "--.-", ".-.", // J–R
    "...", "-", "..-", "...-", ".--", "-..-", "-.--", "--.."         // S–Z
};

int main() {
    string message;
    cout << "Enter a short message in English: ";
    getline(cin, message);

    string fullMorse = "";

    for (char c : message) {
        if (isalpha(c)) {
            c = toupper(c);
            int index = c - 'A';
            string code = "";

            // Replace '.' and '-' with ASCII values
            for (char m : morse[index]) {
                code += (m == '.' ? DOT : DASH);
            }

            cout << c << ": " << code << endl;
            fullMorse += code + "   ";
        }
 }

    cout << "\nFull Morse Code Message:\n" << fullMorse << endl;
    return 0;
}
 
